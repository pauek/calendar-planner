generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SemesterType {
  period    String     @id @unique
  semesters Semester[]
}

model Semester {
  year   Int
  period String

  type SemesterType @relation(fields: [period], references: [period])

  specialDays SpecialDay[]
  courses     Course[]

  @@id([year, period])
}

model SpecialDay {
  id     Int      @id @default(autoincrement())
  date   DateTime
  type   String
  year   Int
  period String

  semester Semester @relation(fields: [year, period], references: [year, period])

  @@unique([date, type])
}

model Course {
  id     Int    @id @default(autoincrement())
  name   String
  year   Int
  period String

  semester Semester @relation(fields: [year, period], references: [year, period])

  groups Group[]
}

model Group {
  id       Int    @id @default(autoincrement())
  group    String
  courseId Int
  course   Course @relation(fields: [courseId], references: [id])

  slots WeeklySlot[]

  @@unique([courseId, group])
}

model WeeklySlot {
  id        Int     @id @default(autoincrement())
  weekDay   Int
  startHour Int
  endHour   Int
  lab       Boolean

  group   Group @relation(fields: [groupId], references: [id])
  groupId Int

  @@unique([groupId, weekDay, startHour, endHour, lab])
}
